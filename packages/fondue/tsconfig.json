{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "noUnusedLocals": true,
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@components/*": ["./src/components/*"],
            "@foundation/*": ["./src/foundation/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@layout/*": ["./src/layout/*"],
            "@typography/*": ["./src/typography/*"],
            "@utilities/*": ["./src/utilities/*"]
        },
        "types": ["cypress", "cypress-real-events", "vite/client", "node"]
    },
    "include": [
        ".storybook",
        ".eslintrc.cjs",
        "postcss.config.cjs",
        "cypress.config.ts",
        "src",
        "cypress",
        "scripts",
        "vite.config.ts",
        "tailwind.config.js",
        "components.vite.config.ts",
        "charts.vite.config.ts",
        "icons.vite.config.ts",
        "tailwind.config.ts",
        "tokens.vite.config.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
