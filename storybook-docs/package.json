{
    "name": "@frontify/fondue-storybook-docs",
    "type": "module",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "storybook": "storybook dev -p 6010",
        "copy:ui:storybook": "mkdir -p storybook-static/new && cp -r ../packages/components/storybook-static/. storybook-static/new",
        "copy:charts:storybook": "mkdir -p storybook-static/charts && cp -r ../packages/charts/storybook-static/. storybook-static/charts",
        "copy:icons:storybook": "mkdir -p storybook-static/icons && cp -r ../packages/icons/storybook-static/. storybook-static/icons",
        "copy:fondue:storybook": "mkdir -p storybook-static/legacy && cp -r ../packages/fondue/storybook-static/. storybook-static/legacy",
        "copy:tokens:storybook": "mkdir -p storybook-static/tokens && cp -r ../packages/tokens/storybook-static/. storybook-static/tokens",
        "copy:rte:storybook": "mkdir -p storybook-static/rte && cp -r ../packages/rte/storybook-static/. storybook-static/rte",
        "build:storybook": "storybook build && pnpm run copy:ui:storybook && pnpm run copy:fondue:storybook && pnpm copy:charts:storybook && pnpm copy:icons:storybook && pnpm copy:tokens:storybook && pnpm copy:rte:storybook",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.28.4",
        "@etchteam/storybook-addon-status": "^8.0.0",
        "@frontify/eslint-config-react": "^1.0.4",
        "@storybook/addon-a11y": "^10.1.9",
        "@storybook/addon-docs": "^10.1.9",
        "@storybook/addon-links": "^10.1.9",
        "@storybook/react-vite": "^10.1.9",
        "@types/node": "^22.18.10",
        "@types/react": "^18.3.26",
        "@types/react-dom": "^18.3.7",
        "eslint": "^9.37.0",
        "eslint-plugin-notice": "^1.0.0",
        "eslint-plugin-storybook": "10.1.9",
        "prettier": "^3.6.2",
        "storybook": "^10.1.9",
        "typescript": "^5.9.3",
        "vite": "^5.4.20"
    }
}
